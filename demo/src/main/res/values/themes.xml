<resources>
    <!-- Base application theme. -->
    <style name="Theme.ShadowGadgets" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#555555</item>
        <item name="colorPrimaryVariant">#333333</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#aaaaaa</item>
        <item name="colorSecondaryVariant">#cccccc</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.Compat" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="viewInflaterClass">@string/appcompat_shadow_helper</item>
        <item name="shadowTagMatchers">@xml/matchers</item>
    </style>
</resources>