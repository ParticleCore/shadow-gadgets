<resources>
    <style name="Theme.ShadowGadgets.Demo" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="infoTextViewStyle">@style/Widget.ShadowGadgets.InfoTextView</item>
    </style>

    <style name="Widget.ShadowGadgets.InfoTextView" parent="Widget.AppCompat.TextView">
        <item name="android:background">@drawable/info_text_view_background</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Widget.ShadowGadgets.Shape" parent="">
        <item name="android:backgroundTint">#440000FF</item>
        <item name="android:elevation">12dp</item>
        <item name="android:outlineProvider">background</item>
    </style>

    <style name="Theme.Compat" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="viewInflaterClass">@string/appcompat_shadow_helper</item>
        <item name="shadowTagMatchers">@xml/matchers</item>
    </style>
</resources>